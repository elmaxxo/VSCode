{
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "line",
    "editor.occurrencesHighlight": true,
    "editor.selectionHighlight": true,
    "editor.matchBrackets": "always",
    "editor.guides.indentation": false,
    "editor.autoClosingOvertype": "auto",
    "editor.autoClosingQuotes": "languageDefined",
    "editor.autoSurround": "languageDefined",
    "editor.codeActionsOnSave": {
        "source.fixAll": false,
        "source.organizeImports": false,
    },
    "editor.codeLens": false,
    "editor.colorDecorators": true,
    "editor.defaultFormatter": null,
    "editor.detectIndentation": true,
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": true, // ctrl+C to copy current line
    "editor.find.autoFindInSelection": "multiline", // find in a selected area
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.folding": true,
    "editor.foldingStrategy": "auto",
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 15,
    "editor.glyphMargin": false, // debug breakpoints
    "editor.hover.sticky": true,
    "editor.insertSpaces": false,
    "editor.lightbulb.enabled": false,
    "editor.links": true,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.multiCursorModifier": "alt",
    "editor.overviewRulerBorder": false,
    "editor.parameterHints.enabled": true,
    "editor.parameterHints.cycle": true,
    "editor.quickSuggestionsDelay": 10,
    "editor.renderControlCharacters": true,
    "editor.renderFinalNewline": "on",
    "editor.roundedSelection": true,
    "editor.scrollBeyondLastColumn": 15,
    "editor.showFoldingControls": "always",
    "editor.showUnused": true,
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "none",
    "editor.stablePeek": false,
    "editor.suggest.filterGraceful": true,
    "editor.suggest.localityBonus": false,
    "editor.suggest.showWords": false,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 4,
    "editor.cursorSurroundingLinesStyle": "default",
    "editor.cursorWidth": 2,
    "editor.suggest.showIcons": true,
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.suggestFontSize": 0,
    "editor.suggestOnTriggerCharacters": true,
    "editor.tabSize": 4,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",


    "explorer.autoReveal": false,
    "explorer.confirmDelete": true,
    "explorer.confirmDragAndDrop": true,
    "explorer.decorations.badges": false,
    "explorer.decorations.colors": true,
    "explorer.enableDragAndDrop": true,
    "explorer.incrementalNaming": "smart",


    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,


    "files.encoding": "utf8",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 350,
    "files.enableTrash": true,
    "files.eol": "auto",
    "files.exclude": {
        "**/.o": true,
        "**/AUTHORS": true,
        "**/LICENSE": true,
        "**/NEWS": true,
        "**/CONTRIBUTING.md": true,
        "**/TODO": true,
    },
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true, // ctrl + s to trim
    "files.trimTrailingWhitespace": true, // ctrl + s to trim
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
    },

    "terminal.integrated.confirmOnExit": "never",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cwd": "",
    "terminal.integrated.detectLocale": "auto",
    "terminal.integrated.drawBoldTextInBrightColors": true,
    "terminal.integrated.enableBell": false,
    "terminal.integrated.enableFileLinks": "on",
    "terminal.integrated.fontFamily": "",
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.rightClickBehavior": "default", // show the context menu
    "terminal.integrated.scrollback": 3000,
    "terminal.integrated.showExitAlert": true,



    //"terminal.integrated.defaultProfile.osx": "Git Bash",
    //"terminal.integrated.defaultProfile.linux": "Git Bash",
    //"terminal.integrated.defaultProfile.windows": "Git Bash",
    "workbench.activityBar.visible": false, // extensions: ctrl + shift + x, explorer: ctrl + shift + e, search: ctrl + shift + f, git: ctrl + shift + g
    "workbench.editor.enablePreview": true,


    "workbench.editor.showIcons": true, // enables icon from opened files in tabs
    "workbench.editor.tabCloseButton": "off", // removes cross icon from tabs
    "workbench.statusBar.visible": true, // enables the status bar

    "breadcrumbs.enabled": true, // show a file path under the list of the opened files
    "explorer.compactFolders": false,
    "json.schemas": [],

    "[python]": {
        "editor.useTabStops": true, // delete 4 spaces
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },

    "[c]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.rulers": [
            80,
        ],
    },
    "[cpp]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.rulers": [
            80,
        ],
    },

    "[lua]": {
        "editor.useTabStops": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [
            80,
        ],
    },

    "cSpell.allowCompoundWords": true,
    "cSpell.spellCheckDelayMs": 300,
    "cSpell.ignoreWords": ["tarantool", "noflush", "pgwire", "coio", "pico", "ibuf", "obuf", "dbapi"],

    "errorLens.delay": 500,
    "errorLens.fontWeight": "100",
    "errorLens.fontSize": "12",
    "errorLens.fontStyleItalic": false,
    "errorLens.borderRadius": "3px",
    "errorLens.messageBackgroundMode": "none",

    "workbench.colorCustomizations": {
        "editorInfo.foreground":    "#395ca4dd",
        "statusBar.background": "#262126",
    },
    "workbench.iconTheme": "material-icon-theme",

    "cmake.statusbar.visibility": "hidden",
    "gitlens.statusBar.pullRequests.enabled": false,
    "git.enableStatusBarSync": false,
    "gitlens.graph.statusBar.enabled": false,
    "debug.showInStatusBar": "never",
    "errorLens.statusBarIconsEnabled": false,
    "gitlens.mode.statusBar.enabled": false,
    "notebook.showCellStatusBar": "hidden",

    "C_Cpp.default.cppStandard": "gnu++20",
    "C_Cpp.default.cStandard": "c17",
    "workbench.localHistory.maxFileEntries": 200,

    "rust-analyzer.inlayHints.renderColons": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "python.defaultInterpreterPath": "C:\\Users\\bober\\AppData\\Local\\Microsoft\\WindowsApps\\python3.9.exe",
    "errorLens.messageEnabled": false,
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    }
